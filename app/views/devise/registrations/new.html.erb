<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <ul class="list-unstyled">
          <h2 class="mb-3 text-center">Inscripción</h2>
          <li class="form-group mb-3">
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Correo electrónico" %>
          </li>

          <li class="form-group mb-3">
            <%= f.text_field :name, autocomplete: "name", class: 'form-control', placeholder: "Ingresa tu nombre" %>
          </li>

          <li class="form-group mb-3">
            <%= f.text_field :phone, autocomplete: "phone", class: 'form-control', placeholder: "Número de teléfono" %>
          </li>
        </ul>

        <div class="container mb-3">
          <%= f.fields_for :image do |image_form| %>
            <ul class="list-unstyled mb-3">
              <li class="form-group mb-3">
                <%= image_form.text_field :url, class: 'form-control', placeholder: "URL de tu foto de perfil" %>
              </li>

       
            </ul>
          <% end %>
        </div>

        <ul class="list-unstyled mb-3">
          <li class="form-group mb-3">
            <% if @minimum_password_length %>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "Ingresa tu contraseña" %>
          </li>

          <li class="form-group mb-3">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: "Confirma tu contraseña" %>
          </li>
        </ul>

        <div class="form-group text-center">
          <%= f.submit "Registrarse", class: 'btn btn-primary mt-3' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
